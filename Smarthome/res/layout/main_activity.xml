<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fragment_bg"
    android:orientation="vertical" >

    <include layout="@layout/date_and_weather" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <com.kxw.smarthome.view.MyViewPager
            android:id="@+id/mvp_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00f7f7f7" >
        </com.kxw.smarthome.view.MyViewPager>

        <LinearLayout
            android:id="@+id/menu_ll"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@color/menu_bg_color"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/set_temperature_ll"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/set_temperature_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:duplicateParentState="true"
                    android:src="@drawable/set_temperature_p" />

                <TextView
                    android:id="@+id/set_temperature_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:duplicateParentState="true"
                    android:text="@string/set_temperature"
                    android:textColor="@color/navigation_bar_color"
                    android:textSize="@dimen/navigation_bar_text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/use_water_ll"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/use_water_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:duplicateParentState="true"
                    android:src="@drawable/use_water_n" />

                <TextView
                    android:id="@+id/use_water_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:duplicateParentState="true"
                    android:text="@string/use_water"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/navigation_bar_text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/equipment_info_ll"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/equipment_info_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:duplicateParentState="true"
                    android:src="@drawable/equipment_info_n" />

                <TextView
                    android:id="@+id/equipment_info_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:duplicateParentState="true"
                    android:text="@string/equipment_info"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/navigation_bar_text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tds_info_ll"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/tds_info_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:duplicateParentState="true"
                    android:src="@drawable/tds_info_n" />

                <TextView
                    android:id="@+id/tds_info_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tds_info"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/navigation_bar_text" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>