<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <View
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="@color/activity_bg_color" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:id="@+id/wifi_manage_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/linearlayout_item_select"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_weight="1"
            android:text="@string/wifi_manage"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_24sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_20dp"
            android:src="@drawable/arror" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:id="@+id/brightness_control_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/linearlayout_item_select"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_weight="1"
            android:text="@string/brightness_control"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_24sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_20dp"
            android:src="@drawable/arror" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:id="@+id/volume_control_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/linearlayout_item_select"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_weight="1"
            android:text="@string/volume_control"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_24sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_20dp"
            android:src="@drawable/arror" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:id="@+id/device_code_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/linearlayout_item_select"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_weight="1"
            android:text="@string/device_code"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_24sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_20dp"
            android:src="@drawable/arror" />
    </LinearLayout>

     <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:background="@color/line_color" 
        />

    <LinearLayout
        android:id="@+id/search_ordinfo_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/linearlayout_item_select"
        android:gravity="center_vertical" 
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_weight="1"
            android:text="@string/search_ordinfo"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_24sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_20dp"
            android:src="@drawable/arror" />
    </LinearLayout>
    
         <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:background="@color/line_color" 
        />

    <LinearLayout
        android:id="@+id/machine_synchronization_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/linearlayout_item_select"
        android:gravity="center_vertical" 
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_weight="1"
            android:text="@string/machine_synchronization"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_24sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_20dp"
            android:src="@drawable/arror" />
    </LinearLayout>
    
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:id="@+id/equipment_change_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/linearlayout_item_select"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_weight="1"
            android:text="@string/equipment_change"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_24sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_20dp"
            android:src="@drawable/arror" />
    </LinearLayout>
    
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:background="@color/line_color" />
    
    <LinearLayout
        android:id="@+id/regulating_temperature_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/linearlayout_item_select"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_weight="1"
            android:text="@string/regulating_temperature"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_24sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_20dp"
            android:src="@drawable/arror" />
    </LinearLayout>
    
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:background="@color/line_color" />
    
        <LinearLayout
        android:id="@+id/regulating_machine_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/linearlayout_item_select"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_weight="1"
            android:text="@string/regulating_machine"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_24sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_20dp"
            android:src="@drawable/arror" />
    </LinearLayout>
    
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:id="@+id/version_change_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/linearlayout_item_select"
        android:paddingRight="@dimen/margin_20dp"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_weight="1"
            android:text="@string/version_change"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_24sp" />
        
        <TextView
            android:id="@+id/tv_version_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_24sp" />

        <ImageView
            android:id="@+id/img_jiantou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:src="@drawable/arror" />
    </LinearLayout>
    
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/linearlayout_item_select"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        >

        	<Button 
        	    android:id="@+id/btn_jia_time"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:text="+ 1天"
        	    />
        	
        	<Button 
        	    android:id="@+id/btn_jian_time"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:text="- 1天"
        	    />
        	
        	<Button 
        	    android:id="@+id/btn_jia_filter_1"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:text="1：+ 1时"
        	    />
        	
        	<Button 
        	    android:id="@+id/btn_jian_filter_1"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:text="1：- 1时"
        	    />
        	
        	<Button 
        	    android:id="@+id/btn_jia_filter_2"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:text="2：+ 1时"
        	    />
        	
        	<Button 
        	    android:id="@+id/btn_jian_filter_2"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:text="2：- 1时"
        	    />
        	
        	<Button 
        	    android:id="@+id/btn_jia_filter_3"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:text="3：+ 1时"
        	    />
        	
        	<Button 
        	    android:id="@+id/btn_jian_filter_3"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:text="3：- 1时"
        	    />
        	
        	<Button 
        	    android:id="@+id/btn_jia_filter_4"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:text="4：+ 1时"
        	    />
        	
        	<Button 
        	    android:id="@+id/btn_jian_filter_4"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:text="4：- 1时"
        	    />

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.1"
        android:background="@color/activity_bg_color" />

</LinearLayout>