<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:atguigu="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linerar1"
    android:clipChildren="false"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:clipChildren="false"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:id="@+id/detail_bg"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_180"
                    android:background="#66ADADAD"
                    android:orientation="horizontal"
                    />
                <!--透明颜色#00000000-->
                <LinearLayout
                    android:id="@+id/pop_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FCFCFC"
                    android:clipChildren="false"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_75"
                        android:background="#FCFCFC"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/color_pop_img"
                            android:layout_width="@dimen/dp_90"
                            android:layout_height="@dimen/dp_90"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:background="@mipmap/kuangkuang"

                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_12"
                            android:layout_marginTop="@dimen/dp_10"
                            android:orientation="vertical">

                            <TextView
                                android:textColor="#f23030"
                                android:id="@+id/color_pop_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />

                            <TextView
                                android:id="@+id/color_pop_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_8"
                                />
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@mipmap/home_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <!--  线下面的整个LinearLayout-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <!--颜色选择-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_50"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:text="类型"
                                    android:textColor="#030303"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/color_pop_type"
                                    android:layout_width="@dimen/dp_90"
                                    android:layout_height="@dimen/dp_30"
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:background="@mipmap/type_kuang"
                                    android:gravity="center"
                                    android:padding="2dp"
                                    android:text="台式净水机"
                                    android:textColor="#030303"
                                    android:textSize="14sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/dp_10"
                                android:layout_marginTop="@dimen/dp_10"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:text="颜色"
                                    android:textColor="#030303"
                                    android:textSize="16sp" />

                                <Button
                                    android:id="@+id/color_pop_red"
                                    android:layout_width="@dimen/dp_90"
                                    android:layout_height="@dimen/dp_30"
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:background="@mipmap/red_selected"
                                    android:text="中国红"
                                    android:visibility="gone"
                                    />

                                <Button
                                    android:id="@+id/color_pop_golden"
                                    android:layout_width="@dimen/dp_90"
                                    android:layout_height="@dimen/dp_30"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:background="@mipmap/golden_normal"
                                    android:text="土豪金"
                                    android:visibility="gone"
                                    />

                                <Button
                                    android:id="@+id/color_pop_pearl"
                                    android:layout_width="@dimen/dp_90"
                                    android:layout_height="@dimen/dp_30"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:background="@mipmap/pearl_normal"
                                    android:text="珍珠白"
                                    android:visibility="gone"
                                    />

                                <Button
                                    android:id="@+id/color_pop_black"
                                    android:layout_width="@dimen/dp_90"
                                    android:layout_height="@dimen/dp_30"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:background="@mipmap/pearl_normal"
                                    android:text="珍珠银"
                                    android:visibility="gone"
                                    />


                                <Button
                                    android:id="@+id/color_pop_zhuanshi"
                                    android:layout_width="@dimen/dp_90"
                                    android:layout_height="@dimen/dp_30"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:background="@mipmap/pearl_normal"
                                    android:text="钻石银"
                                    android:visibility="gone"
                                    />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@mipmap/home_line" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_50"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:text="交易类型"
                                    android:textColor="#030303"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@mipmap/home_line" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_50"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/year_linerar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/year_buy_img"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dp_8"
                                        android:background="@mipmap/trade_type_selected" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dp_10"
                                        android:text="服务费"
                                        android:textColor="#030303"
                                        android:textSize="16sp" />
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="@dimen/dp_10"
                                    android:orientation="horizontal">
                                    <com.jx.intelligent.view.NumberAddSubView
                                        android:id="@+id/year_addsubview"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="@dimen/dp_3"
                                        atguigu:value="3"
                                        atguigu:minValue="3"
                                        atguigu:maxValue="3"
                                        />
                                </LinearLayout>


                            </RelativeLayout>


                            <RelativeLayout
                                android:id="@+id/flow_btn_show"
                                android:visibility="visible"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_50"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/flow_linerar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/flow_buy_img"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dp_8"
                                        android:background="@mipmap/trade_type_normal"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dp_10"
                                        android:text="流量购买"
                                        android:textColor="#030303"
                                        android:textSize="16sp" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="@dimen/dp_10"
                                    android:orientation="horizontal">
                                    <com.jx.intelligent.view.NumberAddSubView
                                        android:id="@+id/folw_addsubview"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="3dp"
                                        atguigu:value="1"
                                        atguigu:minValue="0"
                                        atguigu:maxValue="3"
                                        />
                                </LinearLayout>

                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@mipmap/home_line" />

                            <RelativeLayout

                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_50"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:text="购买数量"
                                    android:textColor="#030303"
                                    android:textSize="16sp" />
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="@dimen/dp_10"
                                    android:orientation="horizontal">
                                    <com.jx.intelligent.view.NumberAddSubView
                                        android:id="@+id/buy_number_addsubview"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="@dimen/dp_3"
                                        atguigu:value="1"
                                        atguigu:minValue="0"
                                        atguigu:maxValue="100"
                                        />
                                </LinearLayout>

                            </RelativeLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@mipmap/home_line" />

                            <LinearLayout
                                android:layout_marginBottom="@dimen/dp_4"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_47"
                                android:layout_marginTop="@dimen/dp_30"
                                >

                                <Button
                                    android:id="@+id/addto_shopping_cart"
                                    android:textSize="@dimen/dp_18"
                                    android:textColor="#FFFFFF"
                                    android:background="#F49F2B"
                                    android:text="加入购物车"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    />
                                <Button
                                    android:id="@+id/immediately_buy"
                                    android:textSize="@dimen/dp_18"
                                    android:textColor="#FFFFFF"
                                    android:background="#F23030"
                                    android:text="立即购买"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>






