<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_efeff4"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_45"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="联系人"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_15" />

            <EditText
                android:id="@+id/grxx_dz_lxm_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_45"
                android:background="@color/white"
                android:layout_marginRight="@dimen/dp_15"
                android:hint="名字"
                android:singleLine="true"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_b2b8c2"
                android:textSize="@dimen/sp_15" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@color/color_d4d4d8" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"

            android:gravity="center_vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="手机号码"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_15" />

            <EditText
                android:id="@+id/grxx_dz_phonom_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:background="@color/white"
                android:hint="输入手机号码"
                android:layout_marginRight="@dimen/dp_15"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_b2b8c2"
                android:textSize="@dimen/sp_15" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@color/color_d4d4d8" />

        <LinearLayout

            android:id="@+id/grxx_dz_dq_lr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_45"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            >

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="选择地区"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/grxx_dz_dq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_weight="16"
                android:background="@color/white"
                android:layout_marginRight="@dimen/dp_15"
                android:hint="选择信息"
                android:singleLine="true"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_b2b8c2"
                android:textSize="@dimen/sp_15" />


            <LinearLayout
                android:id="@+id/grxx_tjdz_xzdz"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:gravity="center_vertical"
                android:visibility="gone">

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_15"

                    android:src="@mipmap/grxx_dw" />

            </LinearLayout>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@color/color_d4d4d8" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_65"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="详细地址"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_15" />

            <EditText
                android:id="@+id/grxx_dz_qxdz_edt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@color/white"
                android:gravity="top"
                android:hint="街道门牌信息"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_b2b8c2"
                android:textSize="@dimen/sp_15" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@color/color_d4d4d8" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"

            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="设为默认地址"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="注：每次下单时会默认使用该地址"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_11" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/grxx_dz_szmr_chekb_lr"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_15">

                <CheckBox
                    android:id="@+id/grxx_dz_szmr_chekb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/checkbox_szmrdz_bg"
                    android:button="@null" />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>