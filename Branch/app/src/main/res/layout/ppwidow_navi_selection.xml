<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/layout_walk"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42.5"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/corner_blue_bg_trans"
        android:layout_above="@+id/layout_bike"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            android:background="@drawable/corner_blue_bg_blue"
            android:alpha="0.2"
            android:clickable="false"
            />
        <TextView
            android:id="@+id/txt_walk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/service_navi_walk"
            android:textColor="@drawable/button_press_txt_blue_shallow"
            android:textSize="@dimen/sp_18"
            android:gravity="center"
            android:clickable="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_bike"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42.5"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/corner_blue_bg_trans"
        android:layout_above="@+id/layout_car"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            android:background="@drawable/corner_blue_bg_blue"
            android:alpha="0.2"
            android:clickable="false"
            />
        <TextView
            android:id="@+id/txt_bike"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/service_navi_bike"
            android:textColor="@drawable/button_press_txt_blue_shallow"
            android:textSize="@dimen/sp_18"
            android:gravity="center"
            android:clickable="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_car"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42.5"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@drawable/corner_blue_bg_trans"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            android:background="@drawable/corner_blue_bg_blue"
            android:alpha="0.2"
            android:clickable="false"
            />
        <TextView
            android:id="@+id/txt_car"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/service_navi_car"
            android:textColor="@drawable/button_press_txt_blue_shallow"
            android:textSize="@dimen/sp_18"
            android:gravity="center"
            android:clickable="true"
            />
    </RelativeLayout>


</RelativeLayout>