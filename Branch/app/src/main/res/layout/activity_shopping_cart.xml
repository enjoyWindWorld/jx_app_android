<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#EBEBF1"
    android:layout_height="wrap_content">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/cart_recycle_outside"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </android.support.v7.widget.RecyclerView>
    <View
        android:background="#c2c2c0"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>
    <RelativeLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">



        <CheckBox
            android:button="@null"
            android:id="@+id/shop_all_checkbox"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_centerVertical="true"
            android:background="@drawable/checkbox_shdz_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           />
        <TextView
            android:layout_toRightOf="@+id/shop_all_checkbox"
            android:id="@+id/cart_tv_all"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:textColor="#a79999"
            android:textSize="@dimen/sp_18"
            android:text="全选"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <!--总计¥：0.00元-->
        <TextView

            android:layout_toRightOf="@+id/cart_tv_all"
            android:id="@+id/cart_tv_have_chosen"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_gravity="center_vertical"
            android:textColor="#a79999"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/cart_btn_delete"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/white"
            android:background="#f23030"
            android:text="删除"
            android:visibility="gone"
            android:layout_width="@dimen/dp_100"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/cart_btn_pay"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/white"
            android:background="#F49F2B"
            android:text="结算"
            android:layout_width="@dimen/dp_100"
            android:layout_height="match_parent" />

    </RelativeLayout>
</LinearLayout>
