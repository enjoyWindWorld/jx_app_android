<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:orientation="vertical"
    >
    <include layout="@layout/title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/layout_equipment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:paddingLeft="@dimen/dp_15"
                android:background="@color/white"
                >
                <TextView
                    android:id="@+id/txt_equipment_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:text="选择设备"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_333333"
                    />

                <TextView
                    android:id="@+id/txt_equipment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="请选择设备"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_999999"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toLeftOf="@+id/img_equipment_jt"
                    android:layout_toRightOf="@+id/txt_equipment_title"
                    android:gravity="end"
                    />

                <ImageView
                    android:id="@+id/img_equipment_jt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_arrow"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_5"
                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_f0f1f5"
                />

            <RelativeLayout
                android:id="@+id/layout_fault_phenomenon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:paddingLeft="@dimen/dp_15"
                android:background="@color/white"
                android:visibility="gone"
                >
                <TextView
                    android:id="@+id/txt_fault_phenomenon_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:text="故障现象"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_333333"
                    />

                <TextView
                    android:id="@+id/txt_fault_phenomenon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="请选择故障现象"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_999999"
                    android:layout_toLeftOf="@+id/img_fault_phenomenon_jt"
                    android:layout_toRightOf="@+id/txt_fault_phenomenon_title"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:gravity="end"
                    />

                <ImageView
                    android:id="@+id/img_fault_phenomenon_jt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_arrow"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_5"
                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_f0f1f5"
                />

            <RelativeLayout
                android:id="@+id/layout_fault_description"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:paddingLeft="@dimen/dp_15"
                android:background="@color/white"
                >
                <TextView
                    android:id="@+id/txt_fault_description_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:text="具体说明"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_333333"
                    />

                <TextView
                    android:id="@+id/txt_fault_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="请输入具体说明"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_999999"
                    android:layout_toLeftOf="@+id/img_fault_description_jt"
                    android:layout_toRightOf="@+id/txt_fault_description_title"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:gravity="end"
                    />

                <ImageView
                    android:id="@+id/img_fault_description_jt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_arrow"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_5"
                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:background="@color/color_f0f1f5"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:text="上传故障照片"
                android:textSize="@dimen/sp_15"
                android:gravity="center_vertical"
                android:textColor="@color/color_1BB6EF"
                android:paddingLeft="@dimen/dp_15"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_d4d4d8"
                />

            <com.jx.intelligent.view.MyGridView
                android:id="@+id/grid_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numColumns="4"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_15"
                >

            </com.jx.intelligent.view.MyGridView>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:background="@color/color_f0f1f5"
                />

            <RelativeLayout
                android:id="@+id/layout_date"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:paddingLeft="@dimen/dp_15"
                android:background="@color/white"
                >
                <TextView
                    android:id="@+id/txt_date_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:text="预约时间"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_333333"
                    />

                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="预约时间"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_999999"
                    android:layout_toLeftOf="@+id/img_date_jt"
                    android:layout_toRightOf="@+id/txt_date_title"
                    android:gravity="end"
                    android:layout_marginLeft="@dimen/dp_10"
                    />

                <ImageView
                    android:id="@+id/img_date_jt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_arrow"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_5"
                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_f0f1f5"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:paddingLeft="@dimen/dp_15"
                android:background="@color/white"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系人"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/color_333333"
                    />

                <EditText
                    android:id="@+id/edit_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:layout_toRightOf="@+id/img_location"
                    android:hint="请输入联系人姓名"
                    android:textSize="@dimen/sp_13"
                    android:textColorHint="@color/color_999999"
                    android:layout_toLeftOf="@+id/img_location_jt"
                    android:layout_marginRight="@dimen/dp_15"
                    android:singleLine="true"
                    android:gravity="end"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_f0f1f5"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:paddingLeft="@dimen/dp_15"
                android:background="@color/white"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系方式"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/color_333333"
                    />

                <EditText
                    android:id="@+id/edit_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:layout_toRightOf="@+id/img_location"
                    android:hint="请输入联系电话"
                    android:textSize="@dimen/sp_13"
                    android:textColorHint="@color/color_999999"
                    android:layout_toLeftOf="@+id/img_location_jt"
                    android:layout_marginRight="@dimen/dp_15"
                    android:singleLine="true"
                    android:gravity="end"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_f0f1f5"
                />

            <RelativeLayout
                android:id="@+id/layout_pcd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:paddingLeft="@dimen/dp_15"
                android:background="@color/white"
                >
                <ImageView
                    android:id="@+id/img_pcd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_location"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    />

                <TextView
                    android:id="@+id/txt_pcd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:layout_toRightOf="@+id/img_pcd"
                    android:text="@string/service_release_service_pcd"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_999999"
                    android:layout_toLeftOf="@+id/img_pcd_jt"
                    android:layout_marginRight="@dimen/dp_5"
                    />

                <ImageView
                    android:id="@+id/img_pcd_jt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_arrow"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_15"
                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_f0f1f5"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:orientation="horizontal"
                android:background="@color/white"
                >

                <ImageView
                    android:id="@+id/img_addr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_house"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_gravity="center_vertical"
                    />

                <EditText
                    android:id="@+id/edit_addr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:layout_toRightOf="@+id/img_location"
                    android:hint="@string/service_release_service_detail_addr"
                    android:textSize="@dimen/sp_14"
                    android:textColorHint="@color/color_999999"
                    android:textColor="@color/color_333333"
                    android:layout_toLeftOf="@+id/img_location_jt"
                    android:layout_marginRight="@dimen/dp_10"
                    android:singleLine="true"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
