<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f0f1f5"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/grxx_xgtx_jr"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_90">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="头像"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_15" />


            <ImageView
                android:id="@+id/ui_txsz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@mipmap/gr_arrowf" />

            <com.jx.intelligent.view.XRoundAngleImageView
                android:id="@+id/grxx_tx_img"
                android:layout_width="@dimen/dp_53"
                android:layout_height="@dimen/dp_53"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toLeftOf="@id/ui_txsz"
                android:background="@mipmap/gr_tx"
                android:scaleType="centerInside"
                app:roundHeight="@dimen/dp_26.5"
                app:roundWidth="@dimen/dp_26.5" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@color/color_d4d4d8" />

        <LinearLayout
            android:id="@+id/grxx_xgnc_jr"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:text="昵称"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_15" />


            <TextView

                android:id="@+id/grxx_xgnc_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:text="向目标接吻" />

            <ImageView
                android:id="@+id/ui_ncsz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@mipmap/gr_arrowf" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@color/color_d4d4d8" />

        <RelativeLayout
            android:id="@+id/grxx_xgxb_jr"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="性别"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_15" />

            <ImageView
                android:id="@+id/ui_xbsz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@mipmap/gr_arrowf" />

            <TextView
                android:id="@+id/grxx_xgxb_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toLeftOf="@id/ui_xbsz"
                android:text="男" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@color/color_d4d4d8" />

        <LinearLayout
            android:id="@+id/grxx_xggrqm_jr"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:text="个人签名"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_15" />


            <TextView
                android:id="@+id/grxx_xggrqm_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:text="做所有事情" />


        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/grxx_xgjtdz_jr"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="我的推广码"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_15" />

        <ImageView
            android:id="@+id/ui_jtzzsz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/gr_arrowf" />


    </RelativeLayout>


</LinearLayout>