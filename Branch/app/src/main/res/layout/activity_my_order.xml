<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:background="@color/white"
    android:fitsSystemWindows="true">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_Bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/title_bar" />
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@color/white"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/Order_RadioGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:orientation="horizontal">

            <RadioButton
                android:drawableBottom="@drawable/radiobutton_selected"
                android:id="@+id/all_Order"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="全部订单"
                android:textColor="@color/tab_text_color"
                android:textSize="@dimen/dp_15" />

            <RadioButton
                android:drawableBottom="@drawable/radiobutton_selected"
                android:id="@+id/no_pay_Order"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="未支付"
                android:textColor="@color/tab_text_color"
                android:textSize="@dimen/dp_15" />

            <RadioButton
                android:drawableBottom="@drawable/radiobutton_selected"
                android:id="@+id/pay_Order"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="已支付"
                android:textColor="@color/tab_text_color"
                android:textSize="@dimen/dp_15" />

            <RadioButton

                android:id="@+id/bind_Order"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableBottom="@drawable/radiobutton_selected"
                android:gravity="center"
                android:text="已绑定"
                android:textColor="@color/tab_text_color"
                android:textSize="@dimen/dp_15" />

            <RadioButton
                android:drawableBottom="@drawable/radiobutton_selected"
                android:id="@+id/xufei_Order"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="续费"
                android:textColor="@color/tab_text_color"
                android:textSize="@dimen/dp_15" />
        </RadioGroup>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/Fm_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_100">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/bg_color"
            />
    </FrameLayout>


</android.support.design.widget.CoordinatorLayout>
