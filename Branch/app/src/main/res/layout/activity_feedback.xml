<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_efeff4"
    android:orientation="vertical">


    <EditText
        android:id="@+id/grxx_yjfk_srk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_35"
        android:background="@color/white"
        android:gravity="top"
        android:hint="请将你遇到的问题或者你的建议反馈给我们"
        android:minHeight="@dimen/dp_150"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_20"
        android:textColorHint="@color/color_b2b8c2"
        android:textSize="@dimen/sp_12" />


    <Button
        android:id="@+id/grxx_yjfk_tjan"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@drawable/grxx_xgmm_anbg"
        android:text="提交"
        android:textColor="@drawable/button_press_txt_blue"
        android:textSize="@dimen/sp_18" />


</LinearLayout>