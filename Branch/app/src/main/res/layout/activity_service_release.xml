<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/layout_location"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_65"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_15"
                android:gravity="center_vertical"
                android:background="@color/color_f2f3f2"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:id="@+id/img_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_location"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_10"
                        />

                    <TextView
                        android:id="@+id/txt_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/img_location"
                        android:hint="@string/service_release_hit_location"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/color_666666"
                        android:layout_toLeftOf="@+id/img_location_jt"
                        android:layout_marginRight="@dimen/dp_10"
                        />

                    <ImageView
                        android:id="@+id/img_location_jt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_arrow"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_6"
                android:background="@mipmap/bg_address"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/color_f2f3f2"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_35"
                    android:text="@string/service_release_service_type_title"
                    android:textSize="@dimen/sp_15"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_1BB6EF"
                    android:paddingLeft="@dimen/dp_15"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_d4d4d8"
                    />

                <RelativeLayout
                    android:id="@+id/layout_content"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    >

                    <TextView
                        android:id="@+id/txt_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:text="@string/service_release_service_type"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/color_666666"
                        />

                    <ImageView
                        android:id="@+id/img_content_jt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_arrow"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_d4d4d8"
                    android:layout_marginLeft="@dimen/dp_15"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/tv_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/service_release_service_company_title"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/color_666666"
                        />

                    <EditText
                        android:id="@+id/edit_company"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:layout_toRightOf="@+id/img_location"
                        android:hint="@string/service_release_service_company"
                        android:textSize="@dimen/sp_13"
                        android:textColorHint="@color/color_999999"
                        android:layout_toLeftOf="@+id/img_location_jt"
                        android:layout_marginRight="@dimen/dp_10"
                        android:singleLine="true"
                        />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_d4d4d8"
                    android:layout_marginLeft="@dimen/dp_15"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/tv_promoter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/service_release_service_promoter_title"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/color_666666"
                        />

                    <EditText
                        android:id="@+id/edit_promoter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:layout_toRightOf="@+id/tv_promoter"
                        android:hint="@string/service_release_service_promoter"
                        android:textSize="@dimen/sp_13"
                        android:textColorHint="@color/color_999999"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_toLeftOf="@+id/img_scanning"
                        android:singleLine="true"
                        />

                    <ImageView
                        android:id="@+id/img_scanning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_scanning"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_gravity="center_vertical"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/color_f2f3f2"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_35"
                    android:text="@string/service_release_service_time_title"
                    android:textSize="@dimen/sp_12"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_1BB6EF"
                    android:paddingLeft="@dimen/dp_15"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_d4d4d8"
                    />

                <RelativeLayout
                    android:id="@+id/layout_star_time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    >

                    <TextView
                        android:id="@+id/txt_star_time_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:gravity="center"
                        android:text="@string/service_release_service_star_time_title"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/color_666666"
                        />

                    <TextView
                        android:id="@+id/txt_star_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:layout_toRightOf="@+id/txt_star_time_title"
                        android:layout_toLeftOf="@+id/img_star_time_jt"
                        android:text="@string/service_release_service_star_time"
                        android:textSize="@dimen/sp_13"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textColor="@color/color_999999"
                        />

                    <ImageView
                        android:id="@+id/img_star_time_jt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_arrow"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_end_time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    >

                    <TextView
                        android:id="@+id/txt_end_time_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:gravity="center"
                        android:text="@string/service_release_service_end_time_title"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/color_666666"
                        />

                    <TextView
                        android:id="@+id/txt_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:layout_toRightOf="@+id/txt_end_time_title"
                        android:layout_toLeftOf="@+id/img_end_time_jt"
                        android:text="@string/service_release_service_end_time"
                        android:textSize="@dimen/sp_13"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textColor="@color/color_999999"
                        />

                    <ImageView
                        android:id="@+id/img_end_time_jt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_arrow"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_d4d4d8"
                    android:layout_marginLeft="@dimen/dp_15"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/service_release_service_tel_2"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/color_666666"
                        />

                    <EditText
                        android:id="@+id/edit_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:layout_toRightOf="@+id/img_location"
                        android:hint="@string/service_release_service_tel"
                        android:textSize="@dimen/sp_14"
                        android:inputType="phone"
                        android:textColorHint="@color/color_999999"
                        android:layout_marginRight="@dimen/dp_10"
                        android:singleLine="true"
                        />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_d4d4d8"
                    android:layout_marginLeft="@dimen/dp_15"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/service_release_service_name_title"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/color_666666"
                        />

                    <EditText
                        android:id="@+id/edit_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:layout_toRightOf="@+id/img_location"
                        android:hint="@string/service_release_service_name"
                        android:textSize="@dimen/sp_14"
                        android:textColorHint="@color/color_999999"
                        android:layout_marginRight="@dimen/dp_10"
                        android:singleLine="true"
                        />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/color_f2f3f2"
                />

            <Button
                android:id="@+id/btn_release"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42.5"
                android:text="@string/service_release_button_release"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"
                android:layout_marginTop="@dimen/dp_50"
                android:background="@color/color_1BB6EF"
                />
        </LinearLayout>
    </ScrollView>

    <com.jx.intelligent.view.ProgressWheel
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        />
</LinearLayout>
