<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_efeff4"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_50"
        android:text="请输入新手机号码"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_14" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42.5"
        android:layout_marginTop="@dimen/dp_20">

        <EditText
            android:id="@+id/grxx_bdxsj_sjsrk"
            android:layout_width="@dimen/dp_215"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_10"
            android:textColor="@color/color_333333"
            android:background="@drawable/grxx_bdxsj_srcbg"
            android:inputType="phone"
            android:singleLine="true"
            />

        <Button
            android:id="@+id/grxx_bdxsj_hqyzm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/grxx_xgmm_anbg"
            android:text="获取验证码"
            android:textColor="@drawable/button_press_txt_blue"
            android:textSize="@dimen/sp_14" />


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_35"
        android:text="请输入验证码"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_14" />


    <EditText
        android:id="@+id/grxx_bdxsj_yzmsrk"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42.5"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_10"
        android:inputType="number"
        android:textColor="@color/color_333333"
        android:singleLine="true"
        android:background="@drawable/grxx_bdxsj_srcbg" />


    <Button
        android:id="@+id/grxx_bdxsj_bdan"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42.5"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_45"
        android:background="@drawable/grxx_xgmm_anbg"
        android:text="绑定"
        android:textColor="@drawable/button_press_txt_blue"
        android:textSize="@dimen/sp_18" />

</LinearLayout>