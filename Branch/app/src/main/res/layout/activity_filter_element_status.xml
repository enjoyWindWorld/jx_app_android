<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f2f3f2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_15"
        android:background="@drawable/grxx_lxzt_bg"
        android:orientation="vertical"
        android:padding="@dimen/dp_15">

        <TextView
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginBottom="@dimen/dp_20"
            android:textSize="@dimen/sp_24"
            android:textColor="@color/color_333333"
            android:layout_gravity="center_horizontal"
            android:text="滤芯状态"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:scrollbars="none">

            <LinearLayout
                android:layout_marginTop="@dimen/dp_18.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="PP滤芯"
                        android:textColor="@color/color_777777"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/grxx_jsqzt_ppbfb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100%"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_13" />

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/grxx_jsqzt_ppjdt"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_13"
                    android:layout_marginTop="@dimen/dp_10"
                    android:progress="100"
                    android:max="100"
                    android:progressDrawable="@drawable/lxzt_pp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_40">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="UDF颗粒活性炭滤芯"
                        android:textColor="@color/color_777777"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/grxx_jsqzt_klhxtbfb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100%"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/grxx_jsqzt_klhxtjdt"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_13"
                    android:layout_marginTop="@dimen/dp_10"
                    android:max="100"
                    android:progress="100"
                    android:progressDrawable="@drawable/lxzt_klhxt" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_40">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="RO膜滤芯"
                        android:textColor="@color/color_777777"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/grxx_jsqzt_rombfb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100%"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>


                <ProgressBar
                    android:id="@+id/grxx_jsqzt_romjdt"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_13"
                    android:layout_marginTop="@dimen/dp_10"
                    android:max="100"
                    android:progress="100"
                    android:progressDrawable="@drawable/lxzt_rom" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_40">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="T33椰壳活性炭滤芯"
                        android:textColor="@color/color_777777"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/grxx_jsqzt_hxbxbfb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100%"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>


                <ProgressBar
                    android:id="@+id/grxx_jsqzt_hxbxjdt"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_13"
                    android:layout_marginTop="@dimen/dp_10"
                    android:max="100"
                    android:progress="100"
                    android:progressDrawable="@drawable/lxzt_hxbx" />

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_27">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="弱碱滤芯"
                        android:textColor="@color/color_777777"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/grxx_jsqzt_rjlxbfb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100%"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>

                <ProgressBar
                    android:visibility="gone"
                    android:id="@+id/grxx_jsqzt_rjlxjdt"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_13"
                    android:layout_marginTop="@dimen/dp_10"
                    android:max="100"
                    android:progress="100"
                    android:progressDrawable="@drawable/lxzt_rj" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>