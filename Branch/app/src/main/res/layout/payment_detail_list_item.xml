<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100">
        <ImageView
            android:id="@+id/payment_detail_img"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:src="@mipmap/small_empty_img"
            android:layout_width="@dimen/dp_70"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@+id/payment_detail_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_333333"
                android:id="@+id/details_list_title"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30" />
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_b2b8c2"
                android:id="@+id/year_flow_number"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"  />
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="#f23030"
                android:id="@+id/unit_price"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"  />

        </LinearLayout>

        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_b2b8c2"
            android:id="@+id/details_list_weight"
            android:layout_marginBottom="@dimen/sp_13"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

</LinearLayout>
