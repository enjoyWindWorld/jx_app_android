<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/dp_100"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:text="@string/service_report_version_title"
                android:background="@color/color_e9e9e9"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_14"
                />

            <com.jx.intelligent.view.wheelCityView.MyListView
                android:id="@+id/my_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.jx.intelligent.view.wheelCityView.MyListView>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_e9e9e9"
                />

            <EditText
                android:id="@+id/edt_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@color/color_f1f2f6"
                android:gravity="top"
                android:hint="@string/service_report_version"
                android:lines="6"
                android:padding="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:visibility="gone"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_b2b8c2"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
