<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f2f3f2"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/zf_txzfxx_txshdz_jr"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:background="@mipmap/icon_input_addr_bg"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:src="@mipmap/grxx_dw"
            android:layout_alignBottom="@+id/lyout_addr"
            />

        <LinearLayout
            android:id="@+id/lyout_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/img_location"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@null"
                    android:enabled="false"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/txt_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:background="@null"
                    android:enabled="false"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@null"
                android:enabled="false"
                android:singleLine="true"
                android:textColor="@color/color_777777"
                android:textSize="@dimen/sp_14" />


        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/gr_arrowf"
            android:visibility="gone"
            />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:gravity="center_vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_weight="1"
            android:text="货品信息"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_12" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_d4d4d8" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="@color/white"
        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/img_product"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@mipmap/small_empty_img" />


        <LinearLayout
            android:id="@+id/zf_txzfxx_bdxsjhm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_15" />


            <TextView
                android:id="@+id/zf_txzfxx_bddsjhm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="@color/color_fd6212"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_15"
        android:textColor="@color/color_8e95a1"
        android:textSize="@dimen/dp_12"
        android:text="选择交易" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_d4d4d8" />


    <LinearLayout
        android:id="@+id/layout_year"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_14"
            android:text="包年金额：" />


        <TextView
            android:id="@+id/txt_year_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:text="￥0元"
            android:textColor="@color/color_fd6212"
            android:textSize="@dimen/sp_14" />


        <CheckBox
            android:id="@+id/year_price_checkb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/checkbox_zf_bg"
            android:enabled="false"
            android:button="@null" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_d4d4d8" />


    <LinearLayout
        android:id="@+id/layout_flow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_14"
            android:text="流量金额：" />

        <TextView
            android:id="@+id/txt_flow_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:text="￥0元"
            android:textColor="@color/color_fd6212"
            android:textSize="@dimen/sp_14" />


        <CheckBox
            android:id="@+id/flow_price_checkb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/checkbox_zf_bg"
            android:enabled="false"
            android:button="@null" />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_d4d4d8" />

    <Button

        android:id="@+id/zf_txzfxx_zf_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42.5"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/grxx_xgmm_anbg"
        android:text="@string/pay_info_button_title"
        android:textColor="@drawable/button_press_txt_blue"
        android:textSize="@dimen/sp_18" />


</LinearLayout>