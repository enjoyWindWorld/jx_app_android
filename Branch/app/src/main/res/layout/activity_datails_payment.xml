<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_efeff4"
    android:orientation="vertical">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/zf_zfxq_sp_ms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="@string/DetailsPayment_total"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/zf_zfxq_bnje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥0"
            android:textColor="@color/color_fd6212"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/zf_zfxq_yfjems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="@string/pay_detail_no_pay_money_tile"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/zf_zfxq_hxzf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@color/color_fd6212"
            android:textSize="@dimen/sp_15" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_d4d4d8" />


    <LinearLayout
        android:id="@+id/layout_wx"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/white"
        android:gravity="center_vertical">

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@mipmap/pay_wx_icon" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:text="微信"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_15" />


        <CheckBox

            android:id="@+id/zf_zfxq_wx_checkb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/checkbox_zf_bg"
            android:button="@null"
            android:enabled="false"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="@dimen/dp_15"
            android:layout_height="1px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_d4d4d8" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_zfb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/white"
        android:gravity="center_vertical">

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@mipmap/pay_zfb_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:text="@string/alipay_title"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_15" />


        <CheckBox
            android:id="@+id/zf_zfxq_zfb_checkb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/checkbox_zf_bg"
            android:enabled="false"
            android:button="@null" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="@dimen/dp_15"
            android:layout_height="1px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_d4d4d8" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_yl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/white"
        android:gravity="center_vertical">

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@mipmap/icom_banck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:text="@string/banck_title"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_15" />

        <CheckBox
            android:id="@+id/zf_zfxq_yl_checkb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/checkbox_zf_bg"
            android:enabled="false"
            android:button="@null" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/zf_zfxq_qrzf_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42.5"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@drawable/zf_zfxq_qrzfbtnbg"
        android:clickable="true">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pay_detail_button_tile"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/zf_zfxq_qrzf_je"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥0"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18" />


        </LinearLayout>


    </RelativeLayout>


</LinearLayout>