<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <shape>
            <solid android:color="@color/white" />
            <corners android:bottomLeftRadius="@dimen/dp_2" android:bottomRightRadius="@dimen/dp_2" android:topLeftRadius="@dimen/dp_2" android:topRightRadius="@dimen/dp_2" />
            <stroke android:width="1dp" android:color="#d4d4d8" />
        </shape>


    </item>
    <item android:state_pressed="false">

        <shape>
            <solid android:color="#1bb6ef" />
            <corners android:bottomLeftRadius="@dimen/dp_2" android:bottomRightRadius="@dimen/dp_2" android:topLeftRadius="@dimen/dp_2" android:topRightRadius="@dimen/dp_2" />
            <stroke android:width="1dp" android:color="#d4d4d8" />
        </shape>


    </item>

    <item>

        <shape>
            <solid android:color="#1bb6ef" />
            <corners android:bottomLeftRadius="@dimen/dp_2" android:bottomRightRadius="@dimen/dp_2" android:topLeftRadius="@dimen/dp_2" android:topRightRadius="@dimen/dp_2" />
            <stroke android:width="1dp" android:color="#d4d4d8" />
        </shape>


    </item>
</selector>