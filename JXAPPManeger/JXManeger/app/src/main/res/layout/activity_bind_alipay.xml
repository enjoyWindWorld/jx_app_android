<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_un_bind_alipay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f2f2f2"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:background="@color/white"
        >

        <ImageView
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:background="@mipmap/icon_unbind_alipay"
            android:layout_above="@+id/view_center"
            android:layout_centerHorizontal="true"
            />

        <View
            android:id="@+id/view_center"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dp_5"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_center"
            android:text="未绑定支付宝账号"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_20"
            android:gravity="center"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="填写提现信息"
        android:textColor="@color/color_000000"
        android:textSize="@dimen/sp_15"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        />

    <LinearLayout
        android:id="@+id/layout_cash_register"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:paddingLeft="@dimen/dp_30"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝账号"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_13"
            android:layout_marginRight="@dimen/dp_10"
            />

        <EditText
            android:id="@+id/edit_my_alipay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:layout_marginRight="@dimen/dp_15"
            android:hint="支付宝账号"
            android:background="@null"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_2"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:paddingLeft="@dimen/dp_30"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="真实姓名"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_13"
            android:layout_marginRight="@dimen/dp_10"
            />

        <EditText
            android:id="@+id/edit_my_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@null"
            android:hint="真实姓名"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_2"
        android:background="@color/white" />

    <LinearLayout
        android:id="@+id/layout_checkbox"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:paddingLeft="@dimen/dp_30"
        android:background="@color/white"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/buy_details_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="本人确认此账号为提现收款账号"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14" />

        <CheckBox
            android:enabled="false"
            android:button="@null"
            android:background="@drawable/checkbox_zf_bg"
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20.0dp"
            />


    </LinearLayout>


    <Button
        android:id="@+id/btn_bind"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42.5"
        android:text="绑 定"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"
        android:layout_margin="@dimen/dp_30"
        android:background="@color/color_1BB6EF"
        />

</LinearLayout>
