<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/dp_20"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_toLeftOf="@+id/img_jt"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户名字："
                android:textColor="@color/color_000000"
                />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="151911107143714"
                android:textColor="@color/color_000000"
                android:gravity="end"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_5"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系方式："
                android:textColor="@color/color_000000"
                />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="13434327491"
                android:textColor="@color/color_000000"
                android:gravity="end"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_5"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号："
                android:textColor="@color/color_000000"
                />

            <TextView
                android:id="@+id/tv_ord_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="151911107143714"
                android:textColor="@color/color_000000"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_5"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="家庭住址："
                android:textColor="@color/color_000000"
                />

            <TextView
                android:id="@+id/tv_addr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="13434327491"
                android:textColor="@color/color_000000"
                android:gravity="end"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_5"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="净水器编号："
                android:textColor="@color/color_000000"
                />

            <TextView
                android:id="@+id/tv_pro_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="151911107143714"
                android:textColor="@color/color_000000"
                android:gravity="end"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_5"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="净水器类型："
                android:textColor="@color/color_000000"
                />

            <TextView
                android:id="@+id/tv_pro_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="151911107143714"
                android:textColor="@color/color_000000"
                android:gravity="end"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_5"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="包年时间剩余："
                android:textColor="@color/color_000000"
                />

            <TextView
                android:id="@+id/tv_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="100"
                android:gravity="end"
                android:textColor="@color/color_000000"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_flow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_5"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="流量套餐剩余："
                android:textColor="@color/color_000000"
                android:id="@+id/textView4" />

            <TextView
                android:id="@+id/tv_flow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="100"
                android:gravity="end"
                android:textColor="@color/color_000000"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="滤芯状况"
            android:textColor="@color/color_000000"
            android:layout_marginTop="@dimen/dp_5"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_5"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pp滤芯"
                android:textColor="@color/color_000000"
                android:layout_marginLeft="@dimen/dp_10"
                />

            <TextView
                android:id="@+id/tv_pp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="cto：95%"
                android:textColor="@color/color_000000"
                android:gravity="end"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_5"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="复合滤芯(颗粒炭+PP)"
                android:textColor="@color/color_000000"
                android:layout_marginLeft="@dimen/dp_10"
                />

            <TextView
                android:id="@+id/tv_cto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="cto：95%"
                android:textColor="@color/color_000000"
                android:gravity="end"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_5"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ro膜滤芯"
                android:textColor="@color/color_000000"
                android:layout_marginLeft="@dimen/dp_10"
                />

            <TextView
                android:id="@+id/tv_ro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="复合能量：95%"
                android:textColor="@color/color_000000"
                android:gravity="end"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="@dimen/dp_5"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T33椰壳活性炭滤芯"
                android:textColor="@color/color_000000"
                android:layout_marginLeft="@dimen/dp_10"
                />

            <TextView
                android:id="@+id/tv_fh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="复合能量：95%"
                android:textColor="@color/color_000000"
                android:gravity="end"
                />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/img_jt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/gr_arrowf"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_15"
        />

</RelativeLayout>
