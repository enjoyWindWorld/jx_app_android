<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_efeff4"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_15"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                >

                <TextView
                    android:id="@+id/txt_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="@string/order_detail_order_code_title"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_14"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/zf_sp_ddhm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_333333"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/txt_temp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_toLeftOf="@+id/zf_status"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/zf_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_fd6212"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_alignParentRight="true"
                    android:gravity="end"
                    android:textSize="@dimen/sp_14" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/color_d4d4d8" />


            <TextView

                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"

                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:text="@string/order_detail_goods_info_title"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_d4d4d8" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:background="@color/white">

                <ImageView

                    android:id="@+id/zf_zt_icon"
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_70"
                    android:layout_gravity="center_vertical"

                    android:layout_marginLeft="@dimen/dp_15"
                    android:src="@mipmap/small_empty_img" />


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/zf_dd_bt_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_15" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_7">

                        <TextView
                            android:id="@+id/zf_zt_title_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/order_detail_goods_price_title"
                            android:textColor="@color/color_fd6212"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/zf_zt_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="0元"
                            android:textColor="@color/color_fd6212"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_31.5"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_12"
                android:text="@string/order_detail_buyers_info_title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_20"
                    android:text="联系人"
                    android:textColor="@color/color_777777"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/txt_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_14" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_d4d4d8" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/dp_45"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                >

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_20"
                    android:text="@string/order_detail_buyers_address_title"
                    android:textColor="@color/color_777777"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/txt_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_333333"
                    android:layout_marginRight="@dimen/dp_15"
                    android:textSize="@dimen/sp_14" />


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_d4d4d8" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_20"
                    android:text="@string/order_detail_buyers_tellphone_title"
                    android:textColor="@color/color_777777"
                    android:textSize="@dimen/sp_14" />

                <TextView

                    android:id="@+id/zf_sp_spm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_14" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_d4d4d8" />

            <LinearLayout
                android:id="@+id/layout_date"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:background="@color/white"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_20"
                    android:text="安装时间"
                    android:textColor="@color/color_777777"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/zf_sp_spsj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/color_1bb6ef"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_20"
                    android:text="@string/order_detail_pay_type_title"
                    android:textColor="@color/color_777777"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/zf_sp_ddzffs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_d4d4d8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:background="@color/white"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/zf_dd_jg_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_20"
                    android:text="@string/order_detail_order_price_title"
                    android:textColor="@color/color_777777"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/zf_dd_jg_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/color_fd6212"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</RelativeLayout>