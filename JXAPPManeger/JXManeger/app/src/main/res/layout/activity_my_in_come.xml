<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_my_in_come"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_f2f2f2"
    >
    <RelativeLayout
        android:id="@+id/layout_money"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:background="@color/color_fe453a"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="可提现"
            android:gravity="center"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/white"
            android:layout_above="@+id/img_jt"
            />

        <ImageView
            android:id="@+id/img_jt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/gr_arrowf"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¥0.00元"
            android:gravity="center"
            android:textSize="@dimen/sp_23"
            android:textColor="@color/white"
            android:layout_below="@+id/img_jt"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_bind_alipay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:paddingLeft="@dimen/dp_15"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_20"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定支付宝"
            android:textColor="@color/color_333333"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_bind_alipay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未绑定"
            android:textColor="@color/color_a0a0a0"
            android:textSize="@dimen/sp_13"
            android:layout_toLeftOf="@+id/img_bind_alipay"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/img_bind_alipay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/gr_arrowf" />

    </RelativeLayout>

    <View
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_2"
        android:background="@color/white" />

    <LinearLayout
        android:id="@+id/layout_cash_register"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:paddingLeft="@dimen/dp_15"
        android:gravity="center_vertical"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现记录"
            android:layout_weight="1"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_15" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/gr_arrowf" />


    </LinearLayout>

</LinearLayout>
