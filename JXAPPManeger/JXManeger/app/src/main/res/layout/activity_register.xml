<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/layout_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_20"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_back"
            android:textColor="@color/color_1bb6ef"
            android:textSize="@dimen/sp_15"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    >

                    <TextView
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="推荐人代码"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_13"
                        />

                    <EditText
                        android:id="@+id/recommen_code"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="请输入推荐人代码"
                        android:inputType="textPassword"
                        android:textColorHint="@color/color_b2b8c2"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_13" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#fff0f1f6"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginTop="10dp"
                    >

                    <TextView
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="推荐人姓名"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_13"
                        />

                    <EditText
                        android:id="@+id/recommen_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="请输入推荐人姓名"
                        android:inputType="textPassword"
                        android:textColorHint="@color/color_b2b8c2"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_13" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#fff0f1f6"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginTop="10dp"
                    >

                    <TextView
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="申请人订单号"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_13"
                        />

                    <EditText
                        android:id="@+id/order_no"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="请输入申请人订单号"
                        android:inputType="textPassword"
                        android:textColorHint="@color/color_b2b8c2"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_13" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#fff0f1f6"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginTop="10dp"
                    >

                    <TextView
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="申请人姓名"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_13"
                        />

                    <EditText
                        android:id="@+id/applicant_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="请输入申请人姓名"
                        android:inputType="textPassword"
                        android:textColorHint="@color/color_b2b8c2"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_13" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#fff0f1f6"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginTop="10dp"
                    >

                    <TextView
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="身份证号码"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_13"
                        />

                    <EditText
                        android:id="@+id/code"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="请输入身份证号码"
                        android:inputType="textPassword"
                        android:textColorHint="@color/color_b2b8c2"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_13" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#fff0f1f6"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginTop="10dp"
                    >

                    <TextView
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="手机号码"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_13"
                        />

                    <EditText
                        android:id="@+id/phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="请输入手机号码"
                        android:inputType="textPassword"
                        android:textColorHint="@color/color_b2b8c2"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_13" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#fff0f1f6"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginTop="10dp"
                    >

                    <TextView
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="家庭住址"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_13"
                        />

                    <EditText
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="请输入家庭住址"
                        android:inputType="textPassword"
                        android:textColorHint="@color/color_b2b8c2"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_13" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#fff0f1f6"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    />

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="我以阅读并同意本APP用户协议和法律协议"
                    android:textSize="@dimen/sp_11"
                    android:layout_marginTop="10dp"
                    />

                <Button
                    android:id="@+id/btn_register"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_42.5"
                    android:text="@string/register_register"
                    android:textColor="@drawable/button_press_txt_blue"
                    android:textSize="@dimen/sp_18"
                    android:layout_marginTop="@dimen/dp_36"
                    android:background="@drawable/corner_blue_bg_blue"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    />

            </LinearLayout>
    </ScrollView>
</LinearLayout>
