<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_70"
    android:background="@color/white"
    android:paddingTop="@dimen/dp_10"
    >

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_13"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_above="@+id/img_jt"
        android:layout_toLeftOf="@+id/tv_code"
        android:layout_toStartOf="@+id/tv_code"
        android:layout_marginRight="@dimen/dp_10"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/tv_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_13"
        android:layout_toLeftOf="@+id/img_jt"
        android:layout_above="@+id/img_jt"
        />

    <TextView
        android:id="@+id/tv_rebate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_13"
        android:layout_below="@+id/img_jt"
        android:layout_marginLeft="@dimen/dp_20"
        />

    <TextView
        android:id="@+id/tv_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_13"
        android:layout_below="@+id/img_jt"
        android:layout_toLeftOf="@+id/img_jt"
        />

    <ImageView
        android:id="@+id/img_jt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@mipmap/gr_arrowf"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_20"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_f2f2f2"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        />
</RelativeLayout>
