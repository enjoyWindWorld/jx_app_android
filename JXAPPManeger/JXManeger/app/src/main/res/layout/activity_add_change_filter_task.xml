<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f0f1f5"
    android:orientation="vertical"
    android:id="@+id/main"
    >

    <RelativeLayout
        android:id="@+id/layout_equipment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_15"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/txt_equipment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:text="选择设备"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_333333"
            />

        <TextView
            android:id="@+id/txt_equipment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="选择设备"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_999999"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/txt_equipment_title"
            android:gravity="end"
            android:layout_marginRight="@dimen/dp_15"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_15"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_1"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        >
        <TextView
            android:id="@+id/txt_filter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:text="更换滤芯"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_333333"
            android:layout_marginRight="@dimen/dp_15"
            />

        <TextView
            android:id="@+id/txt_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="更换滤芯"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_999999"
            android:gravity="end"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/txt_filter_title"
            />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_fault_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_15"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_1"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        >
        <TextView
            android:id="@+id/txt_fault_description_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:text="具体说明"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_333333"
            />

        <TextView
            android:id="@+id/txt_fault_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="更换滤芯"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_999999"
            android:layout_toRightOf="@+id/txt_fault_description_title"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="end"
            android:layout_marginRight="@dimen/dp_15"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_15"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_30"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        >
        <TextView
            android:id="@+id/txt_date_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:text="预约时间"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_333333"
            />

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="预约时间"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_999999"
            android:layout_toRightOf="@+id/txt_date_title"
            android:gravity="end"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_15"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_1"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        >
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系人"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_gravity="center_vertical"
            android:textColor="@color/color_333333"
            />

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:layout_toRightOf="@+id/img_location"
            android:hint="请输入联系人姓名"
            android:textSize="@dimen/sp_13"
            android:textColorHint="@color/color_999999"
            android:layout_toLeftOf="@+id/img_location_jt"
            android:layout_marginRight="@dimen/dp_15"
            android:singleLine="true"
            android:gravity="end"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_15"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_1"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        >
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系方式"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_gravity="center_vertical"
            android:textColor="@color/color_333333"
            />

        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:layout_toRightOf="@+id/img_location"
            android:hint="请输入联系电话"
            android:textSize="@dimen/sp_13"
            android:textColorHint="@color/color_999999"
            android:layout_toLeftOf="@+id/img_location_jt"
            android:layout_marginRight="@dimen/dp_15"
            android:singleLine="true"
            android:gravity="end"
            />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_pcd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_15"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_1"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        >
        <ImageView
            android:id="@+id/img_pcd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_location"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            />

        <TextView
            android:id="@+id/txt_pcd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_toRightOf="@+id/img_pcd"
            android:text="@string/service_release_service_pcd"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_999999"
            android:layout_marginRight="@dimen/dp_15"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_1"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        >

        <ImageView
            android:id="@+id/img_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_house"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_gravity="center_vertical"
            />

        <EditText
            android:id="@+id/edit_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:layout_toRightOf="@+id/img_location"
            android:hint="@string/service_release_service_detail_addr"
            android:textSize="@dimen/sp_14"
            android:textColorHint="@color/color_999999"
            android:textColor="@color/color_333333"
            android:layout_toLeftOf="@+id/img_location_jt"
            android:singleLine="true"
            />

    </LinearLayout>


</LinearLayout>
